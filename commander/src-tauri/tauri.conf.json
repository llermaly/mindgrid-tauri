{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "commander",
  "version": "0.1.0",
  "identifier": "ai.autohand.commander",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "VITE_SKIP_TYPE_CHECK=1 bun vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Autohand.ai - Commander",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": true,
        "skipTaskbar": false,
        "alwaysOnTop": false,
        "visible": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": ["core:default", "core:window:allow-start-dragging"]
        }
      ]
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "cli/commander"
    ]
  }
}
